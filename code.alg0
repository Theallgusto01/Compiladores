// Comentário de linha simples
/* Comentário
   de bloco
*/

escreva("=== CALCULADORA DE MÉDIA ===");

escreva("Digite a primeira nota: ");
leia(a);

escreva("Digite a segunda nota: ");
leia(b);

/* Cálculo da média */
c = (a + b) / 2;

escreva("Sua média é: ", c);

/* Teste de função raiz */
escreva("A raiz quadrada da média é: ", raiz(c));

/* Teste de expressão mais complexa */
d = (a * 2) + (b * 3) - c / raiz(c);

escreva("Resultado adicional do cálculo: ", d);

fim
